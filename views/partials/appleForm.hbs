<div id="apple" class="hidden flex justify-center bg-gray-100 mt-4">
  <div class="bg-white shadow-xl rounded-2xl p-8 w-full max-w-md">
    <h2 class="text-2xl font-bold mb-6" id="greeting">Submit Apple</h2>
    <form id="appleForm" class="space-y-4">

      <div>
        <label
          for="date"
          class="block text-sm font-medium text-gray-700 mb-1"
        >Date</label>
        <input
          id="date"
          name="date"
          type="date"
          class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400"
          required
        />
      </div>
      {{!  }}
      <div>
        <label class="block text-sm/6 font-medium text-gray-900" for="">Bought
          Qty
        </label>
        <div
          class="flex w-full border border-gray-300 rounded overflow-hidden shadow-md"
        >
          <label class="flex flex-col flex-1">
            <span
              class="text-sm text-gray-600 bg-gray-50 text-center py-1 border-b border-gray-200"
            >Green (qty)</span>
            <div
              class="flex items-center border bg-white pl-3 outline-1 -outline-offset-1 outline-gray-300 has-[input:focus-within]:outline-2 has-[input:focus-within]:-outline-offset-2 has-[input:focus-within]:outline-indigo-600"
            >
              <input
                type="text"
                inputmode="numeric"
                name="green_qty_bought"
                id="green_qty_bought"
                class="block min-w-0 grow py-1.5 pr-3 pl-1 text-base text-gray-900 placeholder:text-gray-400 focus:outline-none sm:text-sm/6"
                placeholder="0"
              />
              <div class="grid shrink-0 grid-cols-1 focus-within:relative">
                <select
                  id="green_qty_bought_type"
                  name="green_qty_bought_type"
                  aria-label="type"
                  class="col-start-1 row-start-1 w-full appearance-none rounded-md py-1.5 pr-7 pl-3 text-base text-gray-500 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6"
                >
                  <option value="crate">CRATE</option>
                  <option value="pcs">PCS</option>

                </select>
                <svg
                  class="pointer-events-none col-start-1 row-start-1 mr-2 size-5 self-center justify-self-end text-gray-500 sm:size-4"
                  viewBox="0 0 16 16"
                  fill="currentColor"
                  aria-hidden="true"
                  data-slot="icon"
                >
                  <path
                    fill-rule="evenodd"
                    d="M4.22 6.22a.75.75 0 0 1 1.06 0L8 8.94l2.72-2.72a.75.75 0 1 1 1.06 1.06l-3.25 3.25a.75.75 0 0 1-1.06 0L4.22 7.28a.75.75 0 0 1 0-1.06Z"
                    clip-rule="evenodd"
                  />
                </svg>
              </div>
            </div>
          </label>

          <div class="w-px bg-gray-300"></div>
          <label class="flex flex-col flex-1">
            <span
              class="text-sm text-gray-600 bg-gray-50 text-center py-1 border-b border-gray-200"
            >Red (qty)</span>
            <div
              class="flex items-center border bg-white pl-3 outline-1 -outline-offset-1 outline-gray-300 has-[input:focus-within]:outline-2 has-[input:focus-within]:-outline-offset-2 has-[input:focus-within]:outline-indigo-600"
            >
              <input
                type="text"
                inputmode="numeric"
                name="red_qty_bought"
                id="red_qty_bought"
                class="block min-w-0 grow py-1.5 pr-3 pl-1 text-base text-gray-900 placeholder:text-gray-400 focus:outline-none sm:text-sm/6"
                placeholder="0"
              />
              <div class="grid shrink-0 grid-cols-1 focus-within:relative">
                <select
                  id="red_qty_bought_type"
                  name="red_qty_bought_type"
                  aria-label="type"
                  class="col-start-1 row-start-1 w-full appearance-none rounded-md py-1.5 pr-7 pl-3 text-base text-gray-500 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6"
                >
                  <option value="crate">CRATE</option>
                  <option value="pcs">PCS</option>

                </select>
                <svg
                  class="pointer-events-none col-start-1 row-start-1 mr-2 size-5 self-center justify-self-end text-gray-500 sm:size-4"
                  viewBox="0 0 16 16"
                  fill="currentColor"
                  aria-hidden="true"
                  data-slot="icon"
                >
                  <path
                    fill-rule="evenodd"
                    d="M4.22 6.22a.75.75 0 0 1 1.06 0L8 8.94l2.72-2.72a.75.75 0 1 1 1.06 1.06l-3.25 3.25a.75.75 0 0 1-1.06 0L4.22 7.28a.75.75 0 0 1 0-1.06Z"
                    clip-rule="evenodd"
                  />
                </svg>
              </div>
            </div>
          </label>

        </div>
      </div>
      {{!  }}
      <div>
        <label class="block text-sm/6 font-medium text-gray-900" for="">Bought
          Price</label>
        <div
          class="flex w-full border border-gray-300 rounded overflow-hidden shadow-md"
        >
          <label class="flex flex-col flex-1">
            <span
              class="text-sm text-gray-600 bg-gray-50 text-center py-1 border-b border-gray-200"
            >Green (&#8358;)</span>
            <input
              id="bought_green"
              name="green_price_bought"
              type="number"
              placeholder="0"
              class="w-full p-2 text-center focus:outline-none"
            />
          </label>

          <div class="w-px bg-gray-300"></div>

          <label class="flex flex-col flex-1">
            <span
              class="text-sm text-gray-600 bg-gray-50 text-center py-1 border-b border-gray-200"
            >Red (&#8358;)</span>
            <input
              id="bought_red"
              name="red_price_bought"
              type="number"
              placeholder="0"
              class="w-full p-2 text-center focus:outline-none"
            />
          </label>
        </div>
      </div>

      {{!  }}
      <div>
        <label class="block text-sm/6 font-medium text-gray-900" for="">Sold qty</label>
        <div
          class="flex w-full border border-gray-300 rounded overflow-hidden shadow-md"
        >
          <label class="flex flex-col flex-1">
            <span
              class="text-sm text-gray-600 bg-gray-50 text-center py-1 border-b border-gray-200"
            >Green</span>
            <input
              id="sold-qty-green"
              name="sold_green_qty"
              type="number"
              placeholder="0"
              class="w-full p-2 text-center focus:outline-none"
            />
          </label>

          <div class="w-px bg-gray-300"></div>

          <label class="flex flex-col flex-1">
            <span
              class="text-sm text-gray-600 bg-gray-50 text-center py-1 border-b border-gray-200"
            >Red</span>
            <input
              id="sold-qty-red"
              name="sold_red_qty"
              type="number"
              placeholder="0"
              class="w-full p-2 text-center focus:outline-none"
            />
          </label>
        </div>
      </div>
      {{!  }}
      <div>
        <label class="block text-sm/6 font-medium text-gray-900" for="">Sold
          price</label>
        <div
          class="flex w-full border border-gray-300 rounded overflow-hidden shadow-md"
        >
          <label class="flex flex-col flex-1">
            <span
              class="text-sm text-gray-600 bg-gray-50 text-center py-1 border-b border-gray-200"
            >Green (&#8358;)</span>
            <input
              id="sold-prize-green"
              name="sold_green_price"
              type="number"
              placeholder="0"
              class="w-full p-2 text-center focus:outline-none"
            />
          </label>

          <div class="w-px bg-gray-300"></div>

          <label class="flex flex-col flex-1">
            <span
              class="text-sm text-gray-600 bg-gray-50 text-center py-1 border-b border-gray-200"
            >Red (&#8358;)</span>
            <input
              id="sold-red"
              name="sold_red_price"
              type="number"
              placeholder="0"
              class="w-full p-2 text-center focus:outline-none"
            />
          </label>
        </div>
      </div>
      {{!  }}
      <div>
        <label
          for="spoil"
          class="block text-sm font-medium text-gray-700 mb-1"
        >Spoil</label>
        <input
          id="spoil"
          name="spoil"
          type="number"
          inputmode="numeric"
          placeholder="0"
          class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400"
          required
        />
      </div>
      <div>
        <label
          for="total"
          class="block text-sm font-medium text-gray-700 mb-1"
        >Total sales (&#8358;)</label>
        <input
          id="total"
          name="total"
          type="number"
          inputmode="numeric"
          placeholder="sold total..."
          class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400"
          required
        />
      </div>
      <div>
        <label
          for="Miscellaneous"
          class="block text-sm font-medium text-gray-700 mb-1"
        >Miscellaneous (&#8358;)</label>
        <input
          id="Miscellaneous"
          name="miscellaneous"
          type="number"
          inputmode="numeric"
          placeholder="Total: Tfee, feeding, dashout etc.. today!"
          class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400"
          required
        />
      </div>
      <div>
        <label
          for="note"
          class="block text-sm font-medium text-gray-700 mb-1"
        >Note</label>
        <textarea
          id="note"
          name="note"
          rows="3"
          placeholder="Explain: Tfee, feeding, dashout etc.. today!"
          class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400"
          required
        > </textarea>
      </div>
      <button
        type="submit"
        class="w-full bg-blue-600 text-white py-2 rounded-lg hover:bg-blue-700"
      >
        Submit
      </button>
      <p id="messageA" class="text-center text-sm mt-2"></p>
    </form>
  </div>
</div>