<header class="bg-white shadow p-4">
  <h1 class="text-2xl font-bold">{{title}}</h1>
</header>
<!-- MAIN TABLE CONTAINER -->
<div class="max-w-4xl mx-auto mt-10">
  <div class="bg-white shadow-lg rounded-lg overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
      <h2 class="text-xl font-semibold text-gray-800">Watcher List</h2>
    </div>
    <div class="overflow-x-auto">
      <table class="min-w-full text-sm text-gray-700">
        <thead class="bg-gray-100 text-gray-600 uppercase text-xs">
          <tr>
            <th class="px-6 py-3 text-left">SN</th>
            <th class="px-6 py-3 text-left">Big</th>
            <th class="px-6 py-3 text-left">Small</th>
            <th class="px-6 py-3 text-left">Spent (&#8358;)</th>
            <th class="px-6 py-3 text-left">Total (&#8358;)</th>
            <th class="px-6 py-3 text-left">Action</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">

          {{#each data}}
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 font-medium">{{add @index 1}}</td>
              <td class="px-6 py-4">{{this.sold_qty_bg}}</td>
              <td class="px-6 py-4">{{this.sold_qty_sm}}</td>
              <td class="px-6 py-4">{{this.miscellaneous}}</td>
              <td class="px-6 py-4">{{this.total}}</td>

              <td class="px-6 py-4">
                <button
                  onclick="handleDelete(event)"
                  data-id="{{this._id}}"
                  class="bg-red-500 hover:bg-red-600 text-white text-xs font-semibold px-3 py-1 rounded"
                >
                  Delete
                </button>
              </td>
            </tr>
          {{/each}}
          <!-- Add more rows as needed -->
        </tbody>
      </table>
    </div>
  </div>
</div>